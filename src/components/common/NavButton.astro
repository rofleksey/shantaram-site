---
const { href, target } = Astro.props;
---

<a href={href} target={target} class="nav-btn">
    <slot />
</a>

<style>
  .nav-btn {
    background: rgba(36, 36, 36, 0.7);
    border: 1px solid var(--battleship-gray);
    border-radius: 8px;
    color: var(--platinum);
    padding: 1rem;
    text-align: center;
    text-decoration: none;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
    position: relative;
    overflow: hidden;
  }

  .nav-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(223, 223, 223, 0.2), transparent);
    transition: left 0.5s;
  }

  .nav-btn:hover {
    background: rgba(145, 143, 143, 0.2);
    border-color: var(--almost-white);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .nav-btn:hover::before {
    left: 100%;
  }
</style>
