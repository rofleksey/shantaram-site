---
// src/components/HomeNavigation.astro
import NavButton from "../common/NavButton.astro";
---

<div class="nav-buttons">
  <NavButton
    href="/menu"
    onclick="window.ym(104322771, 'reachGoal', 'menu_click')"
  >
    Меню
  </NavButton>

  <NavButton
    href="https://t.me/Shantaram_SaintP"
    target="_blank"
    onclick="window.ym(104322771, 'reachGoal', 'reservation_click')"
  >
    Бронь
  </NavButton>

  <NavButton
    href="tel:+79967709923"
    onclick="window.ym(104322771, 'reachGoal', 'phone_click')"
  >
    +79967709923
  </NavButton>

  <NavButton
    href="https://yandex.ru/maps/org/shantaram/138974568668/reviews/?ll=30.287365%2C59.944702&tab=reviews&z=16"
    target="_blank"
    onclick="ym(104322771, 'reachGoal', 'reviews_click')"
  >
    Отзывы
  </NavButton>

  <NavButton
    href="/catering"
    onclick="ym(104322771, 'reachGoal', 'catering_click')"
  >
    Кейтеринг
  </NavButton>
</div>

<style>
  .nav-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    padding: 0 1rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .nav-buttons {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 480px) {
    .nav-buttons {
      grid-template-columns: 1fr;
    }
  }
</style>