// src/components/HomeNavigation.astro
import NavButton from "../common/NavButton.astro";
---

<div class="nav-buttons">
    <NavButton href="/menu">Меню</NavButton>
    <NavButton href="https://t.me/Shantaram_SaintP" target="_blank">Бронь</NavButton>
    <NavButton href="tel:+79967709923">+79967709923</NavButton>
    <NavButton
            href="https://yandex.ru/maps/org/shantaram/138974568668/reviews/?ll=30.287365%2C59.944702&tab=reviews&z=16"
            target="_blank">
        Отзывы
    </NavButton>
    <NavButton href="/catering">Кейтеринг</NavButton>
</div>

<style>
  .nav-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    padding: 0 1rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .nav-buttons {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 480px) {
    .nav-buttons {
      grid-template-columns: 1fr;
    }
  }
</style>