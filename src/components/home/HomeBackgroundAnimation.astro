---
// src/components/HomeBackgroundAnimation.astro
---

<div id="background-animation">
    <video autoplay muted loop playsinline>
        <source src="/video/background.mp4" type="video/mp4">
    </video>
    <div class="vaporwave-grid"></div>
</div>

<style>
  #background-animation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  #background-animation video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translateX(-50%) translateY(-50%);
    object-fit: cover;
  }

  .vaporwave-grid {
    position: absolute;
    width: 200%;
    height: 200%;
    background-image:
      linear-gradient(var(--battleship-gray) 1px, transparent 1px),
      linear-gradient(90deg, var(--battleship-gray) 1px, transparent 1px);
    background-size: 40px 40px;
    transform: perspective(500px) rotateX(60deg) translateZ(0);
    animation: gridMove 20s linear infinite;
    opacity: 0.3;
  }

  .vaporwave-grid, .floating-shapes, .scan-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
</style>