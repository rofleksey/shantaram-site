---
// src/components/HomeHeader.astro
import {Image} from 'astro:assets';
import CatImage from "../../assets/shantaram_cat.jpg";
import EpicTitle from "./EpicTitle.astro";
---

<header class="no-select">
    <EpicTitle>SHANTARAM</EpicTitle>

    <div class="cat-container">
        <Image src={CatImage} alt="cat logo"/>
    </div>
</header>

<style>
  header {
    text-align: center;
    padding: 2rem 1rem 1rem;
    position: relative;
    z-index: 10;
  }

  .cat-container {
    width: 90%;
    max-width: 600px;
    margin: 0 auto 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .cat-container img {
    width: 100%;
    height: auto;
    display: block;
    max-width: 600px;
  }

  @media (max-width: 767px) {
    .cat-container {
      width: 95%;
      margin: 0 auto 1.5rem;
    }

    .cat-container img {
      width: 100%;
      height: auto;
    }
  }

  @media (max-width: 480px) {
    .cat-container {
      width: 98%;
      padding: 0.5rem;
    }
  }
</style>