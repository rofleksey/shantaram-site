---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import NavButton from "../components/common/NavButton.astro";
import EpicTitle from "../components/common/EpicTitle.astro";
---

<BaseLayout title="SHANTARAM - 404">
    <div class="container">
        <EpicTitle>PAGE NOT FOUND</EpicTitle>
        <video autoplay muted preload="auto" src="/video/cat_404.mp4"></video>
        <NavButton href="/">go home</NavButton>
    </div>
</BaseLayout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
    gap: 2rem;
    margin: 0 auto;
  }

  video {
    width: 100%;
    max-width: 600px;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .container {
      gap: 1.5rem;
      padding: 0 1rem;
    }
  }
</style>